<div class="modal-header">
    <button class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
    <h4 class="modal-title">{{ trans('anomaly.module.templates::message.choose_type') }}</h4>
</div>

<div class="modal-body">
    {% if not types.isEmpty() %}
        <ul class="nav nav-pills nav-stacked">
            {% for type, extensions in types %}
                {% for extension in extensions %}
                    <li class="nav-item">
                        <a href="{{ url_to('admin/templates/' ~ route_parameter('group') ~ '/create?extension=' ~ extension) }}"
                           class="nav-link">
                            <strong>{{ config('anomaly.module.templates::templates.mode.' ~ extension)|upper }}</strong>
                        </a>
                    </li>
                {% endfor %}
            {% endfor %}
        </ul>
    {% else %}
        {{ trans('streams::message.no_results') }}
    {% endif %}
</div>
